<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.retrofitproject.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragmrnt" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.retrofitproject.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

    </fragment>


    <fragment
        android:id="@+id/signUpFragmrnt"
        android:name="com.example.retrofitproject.signUp.SignUpFragment"
        android:label="SignUp"
        tools:layout="@layout/fragment_sign_up">


    </fragment>


</navigation>